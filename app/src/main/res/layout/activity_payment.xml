<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.bitflo.android.SendPaymentActivity"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/text_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="#FFF"
        android:text="To: "/>

    <AutoCompleteTextView
        android:layout_toEndOf="@id/text_to"
        android:layout_marginStart="6dp"
        android:id="@+id/choose_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@android:color/transparent"/>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/divider1"
        android:layout_below="@id/text_to"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF" />

    <TextView
        android:id="@+id/amount_view"
        android:layout_below="@id/divider1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="32sp"
        android:text=""/>
    <TextView
        android:layout_below="@id/divider1"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="32sp"
        android:text="$"/>

    <View
        android:id="@+id/divider2"
        android:layout_below="@id/amount_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF" />

    <GridLayout
        android:id="@+id/payment_grid_layout"
        android:layout_below="@id/divider2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal">

        <Button
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/button_1"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_height="75dp"
            android:id="@+id/button_2"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/button_3"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/button_4"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/button_5"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_6"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_7"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_8"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_9"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_period"
            android:text="."
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_0"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

        <ImageButton
            android:src="@mipmap/ic_undo_white_24dp"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:clickable="true"
            android:id="@+id/button_delete"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:background="?android:attr/selectableItemBackground"/>

    </GridLayout>

</RelativeLayout>
